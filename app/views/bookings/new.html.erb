<p>From: <%= @flight.departure_airport.name %></p>
<p>To: <%= @flight.arrival_airport.name %></p>
<p>On: <%= @flight.date %></p>
<p>Length: <%= @flight.duration %></p>

<%= form_with model: @booking do |b| %>
  <%= b.hidden_field :flight_id, value: @flight.id %>
  <%= b.fields_for :passengers do |p| %>
    <%= p.label :name %>
    <%= p.text_field :name %>
    <%= p.label :email %>
    <%= p.email_field :email %>
    <br>
  <% end %>
  <%= b.submit %>
<% end %>
